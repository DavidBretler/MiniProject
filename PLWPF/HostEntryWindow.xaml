<Window x:Class="PLWPF.HostEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="HostEntryWindow" Height="450" Width="800">
    <Grid x:Name="hostDeteil">
        <Button x:Name="goBack" Content="הצג פרטים" HorizontalAlignment="Left" Height="54" Margin="634,356,0,0" VerticalAlignment="Top" Width="123" FontSize="24" FontFamily="David" Click="goBack_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="207" Margin="558,58,0,0" VerticalAlignment="Top" Width="140">
            <Label Content="קוד מארח"/>
            <Label Content="שם פרטי"/>
            <Label Content="שם משפחה"/>
            <Label Content="מספר טלפון "/>
            <Label Content="דואר אלקטרוני"/>
            <Label Content="מספר יחדות "/>
            <Label Content="חשבון בנק"/>
            <Label Content="האם קיים אישור מהבנק"/>
        </StackPanel>
        <StackPanel x:Name="HostD" HorizontalAlignment="Left" Height="208" Margin="381,57,0,0" VerticalAlignment="Top" Width="133">
            <TextBox Height="27" TextWrapping="Wrap" Text="{Binding HostKey }" Margin="0,0,-0.2,0"/>
            <TextBox Height="29" TextWrapping="Wrap" Text="{Binding PrivateName }" Margin="0,0,-0.2,0"/>
            <TextBox Height="29" TextWrapping="Wrap" Text="{Binding FamilyName }" Margin="0,0,-0.2,0"/>
            <TextBox Height="28" TextWrapping="Wrap" Text="{Binding PhoneNumber }" Margin="0,0,-0.2,0"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="{Binding MailAddress }"/>
            <TextBox Height="27" TextWrapping="Wrap" Text="{Binding numberOfUints }" Margin="0,0,-0.2,0"/>
            <TextBox Height="26" TextWrapping="Wrap" Text="{Binding HostBankAccuont }" Margin="0,0,-0.2,0"/>
            <CheckBox Content="CheckBox" IsChecked="{Binding CollectionClearance }"/>
        </StackPanel>
        <Button Content="עדכן פרטים" HorizontalAlignment="Left" Height="50" Margin="381,329,0,0" VerticalAlignment="Top" Width="133" Click="Button_Click"/>

    </Grid>
</Window>
